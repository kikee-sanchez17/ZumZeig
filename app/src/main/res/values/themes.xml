        <item name="android:textColor">@color/purpleZumzeig</item>
    </style>
    <!--end Event style Tipo evento-->
    <!--Event style Tipo evento Festivales y ciclos-->
    <style name="enventStyleFestivales" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
