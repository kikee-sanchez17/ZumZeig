<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Configuración general del tema -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="imageSrc">@drawable/zumzeig_black</item>
        <item name="homeSrc">@drawable/homeiconblack</item>
        <item name="calendarSrc">@drawable/calendariconblack</item>
        <item name="savedSrc">@drawable/saveiconblack</item>
        <item name="userSrc">@drawable/usericonblack</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!-- Estilo del botón para tema claro -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo del botón static page para tema claro -->
    <style name="textButtonStaticStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/greyStaticButton</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!-- Estilo de los editText del login and sign up para tema claro -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <!-- Estilo de los titulos para tema claro -->
    <style name="Title1Style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo de los titulos 2 de las paginas staticas para tema claro -->
    <style name="Title2Style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo de los textos de las paginas staticas para tema claro -->
    <style name="staticText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">15px</item>
    </style>


    <!-- Estilo de los subtitulos para tema claro -->
    <style name="subtitleStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!--Event style Tipo evento-->
    <style name="enventStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--end Event style Tipo evento-->
</resources>
